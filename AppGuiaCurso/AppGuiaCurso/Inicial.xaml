                       HorizontalTextAlignment="Center" />

                <Label Text="O curso tem três módulos e dura um ano e meio. Pensamos em desenvolver este App para explicar o conteúdo"
                       FontSize="Medium"
                       HorizontalTextAlignment="Center" /> <!--arrumar o texto-->

                <!--mudar cor-->
                <Label Text="Em breve este App estará disponível na Play Store para dowload."
                       TextColor="#AB0209" 
                       HorizontalTextAlignment="Center" />

                <Image Source="FotoSegundoAno2022"/>

                <Label Text="Este App foi desenvolvido sob a orientação do Prof. Tiago A. silva e da Profa. Nídia Castelli"
                       HorizontalTextAlignment="Center"/>

            </StackLayout>
        </ScrollView>                     
    </ContentPage.Content>
